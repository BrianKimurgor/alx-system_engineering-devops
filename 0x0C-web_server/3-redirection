#!/usr/bin/env bash

# Install Nginx if not already installed
if [ ! -f /etc/nginx/sites-available/default ]; then
    sudo apt-get update
    sudo apt-get install -y nginx
fi

# Create a new Nginx configuration file for the redirection
sudo tee /etc/nginx/sites-available/redirect_me > /dev/null <<EOF
server {
    listen 80;
    server_name _;

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Additional server configurations if needed
}
EOF

# Create a symbolic link to enable the new configuration
sudo ln -sf /etc/nginx/sites-available/redirect_me /etc/nginx/sites-enabled/

# Restart Nginx to apply the changes
sudo systemctl restart nginx

# Print success message
echo "Nginx configured for redirection. Test with 'curl -sI http://your_server_ip/redirect_me/'"
